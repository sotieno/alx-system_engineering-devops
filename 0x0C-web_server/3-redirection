#!/usr/bin/env bash
# Configuring a permanent redirection in an Ubuntu machine
sudo apt-get update
sudo apt-get -y install nginx

# Create backup of the default Nginx configuration file
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# nginx profile opening only port 80
sudo ufw allow 'Nginx HTTP'

echo "Hello World!" | sudo tee -a /var/www/html/index.html
sudo sed -i '/^server_name _;/ a\\\t\trewrite ^/redirect_me\/?$ https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;/' /etc/nginx/sites-available/default
sudo service nginx restart
